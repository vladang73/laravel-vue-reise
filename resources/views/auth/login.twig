<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ url('css/login.css') }}">

    <title>Login</title>
</head>

<body>
<div class="bg-form">
    <div class="bg-img"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="white-bg"></div>
            <div class=" form-wrap">
                <form action="{{ route('login') }}" method="post" class="form">
                    {{ csrf_field() }}
                    <div class="logo-wrap">
                        <img src="{{ url('img/logo.png') }}" alt="logo" class="logo-img">
                    </div>

                    {% if (errors.has('email') or errors.has('password')) %}
                        <div class="err-wrap animated">
                            <div class="error ">
                                <div class="error__content">
                                    <span class="error__icon"></span> <span class="error__text">Unable to log in. Please check you username or password</span>
                                </div>
                                <div class="error__arrow"></div>
                            </div>
                        </div>
                    {% endif %}
                    <input type="email" class="email" name="email" placeholder="E-mail">
                    <input type="password" class="password" name="password" placeholder="Wachtwoord">
                    <div class="buttons">
                        <button type="submit" class="login">
                                <span class="login__icon">
                              <svg class="" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 56 56" style="enable-background:new 0 0 56 56;" xml:space="preserve" >
                                  <path d="M25.293,39.293c-0.391,0.391-0.391,1.023,0,1.414C25.488,40.902,25.744,41,26,41s0.512-0.098,0.707-0.293l11.999-11.999   c0.093-0.092,0.166-0.203,0.217-0.326c0.101-0.244,0.101-0.519,0-0.764c-0.051-0.123-0.125-0.234-0.217-0.327L26.707,15.293   c-0.391-0.391-1.023-0.391-1.414,0s-0.391,1.023,0,1.414L35.586,27H5c-0.553,0-1,0.447-1,1s0.447,1,1,1h30.586L25.293,39.293z" fill="#FFFFFF" />
                                      <path d="M51,0H14c-0.553,0-1,0.447-1,1v21c0,0.553,0.447,1,1,1s1-0.447,1-1V2h35v52H15V34c0-0.553-0.447-1-1-1s-1,0.447-1,1v21   c0,0.553,0.447,1,1,1h37c0.553,0,1-0.447,1-1V1C52,0.447,51.553,0,51,0z" fill="#FFFFFF" />
                              </svg>
                            </span>Inloggen</button>
                    </div>
                    <a href="{{ route('forgot_password') }}" class="forgot">Wachtwoord vergeten</a>
                </form>
            </div>
        </div>
    </div>
</div>

